        </xs:restriction>
    </xs:simpleType>

	<xs:simpleType name="Year">
        <xs:restriction base="xs:gYear">
            <xs:minInclusive value="1950"/> 
			<xs:maxInclusive value="1970"/> 
        </xs:restriction>
    </xs:simpleType>

